@import "normalize"
@import "utils"
@import "nib"

body
	background #C0C0C0

.Login-button
	border-radius 5px
	color #fff
	margin-bottom: 1em
	padding 0.2em 0.5em
	width 300px

.Login-container
	background white
	border-radius 20px
	margin-top 100px
	overflow hidden
	width 400px

.Login-input
	background-color: #eee;
	color: #777;
	padding 0.5em
	width 300px
	border-radius 3px

.Login-title
	border-radius 20px 20px 0 0
	color white
	font-weight: 500
	margin 0
	padding .3em 0
	text-align center
